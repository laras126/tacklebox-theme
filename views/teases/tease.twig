<article class="tease--{{post.post_type}}" id="tease-{{post.ID}}">

	{% block content %}
		<h4><a href="{{post.post_link}}">{{post.post_title}}</a></h4>
		<p>{{post.header_summary}}</p>
		<a href="{{post.guid}}" class="btn btn-readmore">Read more...</a>

		{% if post.thumbnail.src %}
			<img src="{{post.thumbnail.src}}" />
		{% endif %}
	{% endblock %}
	
</article>