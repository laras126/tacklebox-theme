{% extends "teases/tease.twig" %}

{% block content %}
	
	<p class="tease__title__helper">Lesson {{loop.index}}</p>
	<h4 class="tease__title--lesson"><a href="{{post.link}}">{{post.title}}</a></h4>
	<p>{{post.header_tagline}}</p>
	
	<a href="{{post.link}}" class="btn btn-readmore">Read more...</a>
	
	{% if post.thumbnail.src %}
		<img src="{{post.thumbnail.src}}" />
	{% endif %}

{% endblock %}