{% extends "blocks/block.twig" %}

{% block content %}

	{% set type = block.list_type %}
	{% set display = block.list_display %}

	{% if block.list_title %}
		<h3 class="list-title">{{block.list_title}}</h3>
	{% endif %}

	{% if block.list_description %}
		<p class="list-description">{{block.list_description}}</p>
	{% endif %}

	<ul class="list list-{{display}} list-{{type}}">

		{% if type == 'free_form' %}
			{% for item in block.list_type_freeform %}
				<li class="list-item -{{display}}{{ item.item_class ? ' ' ~ item.item_class}}">
					{% if display == 'icons' %}
						{% if item.item_svg %}
							<div class="list-item-icon">
								{% include 'partials/svg.twig' with { file : item.item_svg, prefix : 'icon' } %}
							</div>
						{% endif %}
					{% endif %}
					<div class="list-item-main -{{display}}">
						<h4 class="list-item-title -{{display}}">{{item.item_title}}</h4>
						<div class="list-item-desc -{{display}}">
							{{item.item_description}}
						</div>
					</div>
				</li>
			{% endfor %}
		{% else %}
			{% for post in block.list_type_connected_content %}
				<li class="list-item-{{post.post_type}}">
					{% include 'teases/tease-' ~ post.post_type ~ '.twig' %}
				</li>
			{% endfor %}
		{% endif %}
			
	</ul> <!-- /.list-{{display}} -->

{% endblock %}