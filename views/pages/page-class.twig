{% extends 'pages/page.twig' %}

{% block before_content %}	

	<header class="header--page contain--sm">

		{% set display = post.header_display %}
		{% set start = post.class_start_date|date("U") %}
		{% set now = "now"|date("U") %}
		
		{# <p class="header__meta--class">{% for level in post.get_terms('level') %}{{level.name}}{% endfor %}</p> #}
		
		<p class="header__meta--class">{% if start > now %}Now Registering{% else %}<span class="meta--med">Ended</span>{% endif %}</p>
		<h1 class="header__title--class">{{post.post_title}}</h1>
		<p class="header__lead">{{post.header_tagline}}</p>
		
		{% if start > now %}
			<div class="header__alert--class">
				<div class="alert__icon">
					{% include 'partials/svg.twig' with { file: 'calendar', prefix: 'icon'} %}
				</div>
				<time class="alert__main">
					{{post.class_time}}<br>
					{{post.class_start_date|date('F j')}} - {{post.class_end_date|date('F j')}}
				</time>
			</div>
		{% endif %}

		{% if post.header_summary %}
			<p class="header__summary">{{post.header_summary|
		wpautop}}</p>
		{% endif %}

	</header>

	{% if start > now %}
		<div class="contain--md">
			{{ post.class_event ? post.class_event }}
		</div>
	{% else %}
		<div class="contain--sm">
			<div class="alert--warning">
				<h4 class="alert__title">This class has ended.</h4>
				<p>Would you like to see it again? We can definitely do that. Head to the contact page and let me know.</p>
				<a href="" class="btn btn--cta">Request Class</a>
			</div>
		</div>
	{% endif %}
		
{% endblock %}

{% block after_content %}
	{% if lessons %}
		<section id="lessons">
			<div class="contain--sm">
				<h3>Lessons</h3>
			</div>
			<div class="contain--lg">
				<ol class="list--lessons"> 
				{% for item in lessons %}
					{% set item = TimberPost(item) %}
					<li class="list__item--lesson">
						<h4 class="list__item__title--lesson"><span class="special--med">{{loop.index}}</span> <a href="{{post.link}}">{{item.title}}</a></h4>

						{% if item.lesson_date %}
							<time class="meta--med">{{item.lesson_date|date('F j')}}{{item.lesson_time ? ', ' ~ item.lesson_time}}</time>
						{% endif %}

						<p>{{item.header_tagline}}</p>
						{{function('edit_post_link', 'Edit Post', '<span class="edit-link">', '</span>', item.ID)}}
						<div class="">
							<a href="{{item.link}}" class="btn--readmore">Lesson Details</a>
							<a href="{{item.event_page}}" class="btn--hangout">{% include 'partials/svg.twig' with { file: 'quotes-left', prefix: 'icon'} %}Hangout Page</a>
						</div>
					</li>
				{% endfor %}
				</ol>
			</div>
		</section>
	{% endif %}

{% endblock %}
















