{% extends 'pages/page.twig' %}

{% block before_content %}	
	
	{% set display = post.header_display %}
	{% set start = post.class_start_date|date("U") %}
	{% set now = "now"|date("U") %}

	<header class="header--page">
		
		<div class="header__banner">
			<p class="header__meta--class{% if start > now %} class_open{% elseif end < now and start > now %} class_live{% else %} class_off{% endif %}">{% if start > now %}Now Registering{% elseif end < now and start > now %}It's live!{% else %}Not Live{% endif %}</p>
			<h1 class="header__title">{{post.post_title}}</h1>
		</div>
		
		<div class="grid">
		
			<div class="header__main">
				<p class="header__lead">{{post.header_tagline}}</p>
				<p class="header__summary">{{post.header_summary|wpautop}}</p>
				<a class="btn--success" href="#reserve_a_spot">Reserve a Spot</a>
			</div> <!-- .header__main -->
		
			{% if start > now %}
			<div class="bleed header__compliment">

				<div class="alert__row">
					<div class="alert__icon">
						{% include 'partials/svg.twig' with { file: 'calendar', prefix: 'icon'} %}
					</div>
					<time datetime="{{post.class_start_date|date("Y-m-d")}}" class="alert__main">
						<h5 class="alert__row__title">{{post.class_start_date|date('F j')}} - {{post.class_end_date|date('F j')}}</h5>
						<p class="meta">{{post.class_time}}</p>
					</time>
				</div>

				<div class="alert__row">
					<div class="alert__icon">
						{% include 'partials/svg.twig' with { file: 'code', prefix: 'icon'} %}
					</div>
					<div class="alert__main">
						{% for level in post.get_terms('level') %}
							<h5 class="alert__row__title">{{level.name}}</h5>
							<p class="meta">{{level.description}}</p>
						{% endfor %}
					</div>
				</div>
				
				<div class="alert__row last">
					<div class="alert__icon">
						{% include 'partials/svg.twig' with { file: 'hangouts', prefix: 'icon'} %}
					</div>
					<div class="alert__main">
						<h5 class="alert__row__title">Hangouts On Air</h5>
						<p class="meta">This course will take place live every week using <a href="https://plus.google.com/hangouts/onair" target="blank">Google Hangouts on Air</a>.</p>
					</div>
				</div>

			</div>
			{% endif %}
		</div> <!-- .grid -->

	</header>
	
	{% if start < now %}
		<div class="contain--sm">
			<div class="alert--warning">
				<h4 class="alert__title">This class is no longer registering.</h4>
				<p>Would you like to see it again? We can definitely do that. Head to the contact page and let me know.</p>
				<a href="" class="btn btn--cta">Request Class</a>
			</div>
		</div>
	{% endif %}
		
{% endblock %}

