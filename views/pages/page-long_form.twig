{% extends "pages/page.twig" %}

{% block content %}

	{% for section in post.get_field('sections') %}
		<section class="page__section" id="{{section.menu_item_title|replace({ (' '): '_' })}}">
			
			<header class="header--section">
				<div class="squish">
					<h3>{{section.section_title}}</h3>
					<p class="header__lead">{{section.lead}}</p>
				</div>
			</header>

			{% for block in section.blocks %} 
				{% include 'blocks/block-logic.twig' %}
			{% endfor %}

		</section>
	{% endfor %}
	
{% endblock %}