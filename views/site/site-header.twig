
<header class="site__header">
    <div class="grid">

        <div class="site__logo cell cell--center cell--full">
            <a href="{{site.link}}">
                <img src="{{theme.link}}/assets/img/util/tbx-logo1.svg" alt="">
            </a>
        </div>

        <nav id="access" class="site__nav cell cell--full cell--center" role="navigation">
            <ul class="nav__items">
            {% for item in menu.items %}
                <li class="nav__item">
                    <a href="{{item.link}}" class="nav__item__link">{{item.title}}</a>
                    {% if item.get_children %}
                    	<ul class="item__subnav">
        				{% for child in item.get_children %}
        					<li class="subnav__item">
        						<a href="{{child.get_link}}">{{child.title}}</a>
        					</li>
        				{% endfor %}
        				</ul>
                    {% endif %}
                </li>
            {% endfor %}
            </ul>
        </nav><!-- #access -->

    </div>
</header>